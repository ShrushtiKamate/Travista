<% layout("layouts/boilerplate") %>

<div class="flex justify-center items-center min-h-[80vh]">

  <div style="background: #1e1e1e; padding: 2rem 3rem; border-radius: 10px; 
    box-shadow: 0 8px 24px rgba(0,0,0,0.7); width: 360px;">

    <!-- Flash Messages -->
    <div style="margin-bottom: 1rem;">
      <% if (success && success.length > 0) { %>
        <div id="flashji" style="background: #2e7d32; color: #c8facc;
          padding:12px 16px; border-radius:6px; font-weight:700; margin-bottom:1rem;">
          ✅ <%= success %>
        </div>
      <% } %>

      <% if (error && error.length > 0) { %>
        <div style="background:#c62828; color:#f9b4b4;
          padding:12px 16px; border-radius:6px; font-weight:700; margin-bottom:1rem;">
          ❌ <%= error %>
        </div>
      <% } %>
    </div>

    <!-- Heading -->
    <div class="flex items-center justify-center gap-4 mb-6">
      <img src="/compass-solid.svg" style="width:56px;height:56px;" />
      <h1 style="font-size: 2rem; font-weight: 800; color:#fff;">
        Sign up for Travista
      </h1>
    </div>

    <!-- Signup Form -->
    <form action="/signup" method="POST">

      <!-- Username -->
      <div style="margin-bottom:1.2rem;">
        <label style="display:block; margin-bottom:.6rem; font-weight:600; color:#bbb;">
          Username
        </label>
        <input type="text" name="username" required
          style="width:100%; padding:10px 14px; background:#2c2c2c; 
          border:1.5px solid #444; border-radius:8px; color:#eee;">
      </div>

      <!-- Email -->
      <div style="margin-bottom:1.2rem;">
        <label style="display:block; margin-bottom:.6rem; font-weight:600; color:#bbb;">
          Email
        </label>
        <input type="email" name="email" required
          style="width:100%; padding:10px 14px; background:#2c2c2c; 
          border:1.5px solid #444; border-radius:8px; color:#eee;">
      </div>

      <!-- Password -->
      <div style="margin-bottom:2rem;">
        <label style="display:block; margin-bottom:.6rem; font-weight:600; color:#bbb;">
          Password
        </label>
        <input type="password" name="password" required
          style="width:100%; padding:10px 14px; background:#2c2c2c; 
          border:1.5px solid #444; border-radius:8px; color:#eee;">
      </div>

      <!-- Login link -->
      <p style="color:#bbb; font-size:.9rem; margin-bottom:1.2rem;">
        Already have an account?
        <a href="/login" style="color:#F8CC30; font-weight:600;">Login</a>
      </p>

      <!-- Submit Button -->
      <button type="submit"
        style="width:100%; background:#F8CC30; color:#121212; padding:12px;
        font-size:1.2rem; border-radius:10px; font-weight:700; cursor:pointer;">
        Sign Up
      </button>

    </form>

  </div>

</div>

<script>
  const flash = document.getElementById("flashji");
  if (flash) {
    setTimeout(() => { flash.style.display = "none"; }, 3500);
  }
</script>
